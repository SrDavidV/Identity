@model ConfirmacionAccesoExterno


<h3>Asociar su cuenta de: @ViewData["NombreAMostrarProveedor"]</h3>

<form asp-controller="Cuentas" asp-action="ConfirmacionAccesoExterno" method="post" asp-route-returnurl="@ViewData[" RetrunUrl"]">
    <hr/>
    <p>
        Usted ha ingresado correctamente con <strong>@ViewData["NombreAMostrarProveedor"]</strong>.
        Ingrese su nombre de usuario para este sitio a continucación y haga click en el botón registrarse para finalizar
        el inicio de sesión.
    </p>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" placeholder="Ingrese el correo electronico" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" placeholder="Ingrese el correo electronico" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-primaty form-control">Registrarse</button>
        </div>

    </div>


</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }